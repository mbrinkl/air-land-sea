{
  "name": "air-land-sea",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16 <19",
    "npm": ">=8"
  },
  "scripts": {
    "start": "concurrently -c cyan,magenta,yellow --kill-others npm:server npm:client npm:tsc",
    "start:prod": "npm run server:prod",
    "server": "ts-node-dev -T --no-notify ./server/index.ts",
    "server:prod": "ts-node -T ./server/index.ts",
    "tsc": "tsc --noEmit --incremental --watch --preserveWatchOutput --pretty",
    "client": "vite",
    "preview": "vite preview",
    "build": "tsc && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.3",
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@reduxjs/toolkit": "^1.8.6",
    "axios": "^1.2.1",
    "boardgame.io": "^0.50.2",
    "framer-motion": "^8.1.5",
    "koa-static": "^5.0.0",
    "koa2-connect-history-api-fallback": "^0.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.4",
    "react-router-dom": "^6.4.2",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitejs/plugin-react": "^3.0.0",
    "@vitest/coverage-c8": "^0.26.3",
    "concurrently": "^7.4.0",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-vitest-globals": "^1.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "vite": "^4.0.4",
    "vitest": "^0.26.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md,yml}": [
      "prettier --write"
    ]
  }
}
